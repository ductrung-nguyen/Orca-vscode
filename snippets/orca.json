{
  "Single Point Energy Calculation": {
    "prefix": "sp",
    "body": [
      "! ${1|B3LYP,PBE0,wB97X-D3,M06-2X,HF,MP2|} ${2|def2-SVP,def2-TZVP,def2-QZVP,cc-pVDZ,cc-pVTZ,6-31G*|} ${3|TightSCF,VeryTightSCF|}",
      "",
      "* xyz ${4:0} ${5:1}",
      "${6:  C  0.0  0.0  0.0}",
      "* ",
      "$0"
    ],
    "description": "Single point energy calculation template"
  },
  "Geometry Optimization": {
    "prefix": "opt",
    "body": [
      "! ${1|B3LYP,PBE0,wB97X-D3,M06-2X|} ${2|def2-SVP,def2-TZVP,def2-QZVP|} Opt ${3|TightOpt,VeryTightOpt|} ${4|TightSCF,VeryTightSCF|}",
      "",
      "* xyz ${5:0} ${6:1}",
      "${7:  C  0.0  0.0  0.0}",
      "* ",
      "$0"
    ],
    "description": "Geometry optimization template"
  },
  "Frequency Calculation": {
    "prefix": "freq",
    "body": [
      "! ${1|B3LYP,PBE0,wB97X-D3,M06-2X|} ${2|def2-SVP,def2-TZVP,def2-QZVP|} Freq ${3|TightSCF,VeryTightSCF|}",
      "",
      "* xyz ${4:0} ${5:1}",
      "${6:  C  0.0  0.0  0.0}",
      "* ",
      "$0"
    ],
    "description": "Frequency calculation template"
  },
  "Optimization + Frequency": {
    "prefix": "optfreq",
    "body": [
      "! ${1|B3LYP,PBE0,wB97X-D3,M06-2X|} ${2|def2-SVP,def2-TZVP|} Opt Freq ${3|TightSCF,VeryTightSCF|}",
      "",
      "* xyz ${4:0} ${5:1}",
      "${6:  C  0.0  0.0  0.0}",
      "* ",
      "$0"
    ],
    "description": "Combined geometry optimization and frequency calculation"
  },
  "Transition State Optimization": {
    "prefix": "ts",
    "body": [
      "! ${1|B3LYP,PBE0,wB97X-D3|} ${2|def2-SVP,def2-TZVP|} OptTS Freq ${3|TightSCF,VeryTightSCF|}",
      "",
      "%geom",
      "  Calc_Hess true",
      "  NumHess true",
      "end",
      "",
      "* xyz ${4:0} ${5:1}",
      "${6:  C  0.0  0.0  0.0}",
      "* ",
      "$0"
    ],
    "description": "Transition state optimization with frequency"
  },
  "Solvent (CPCM)": {
    "prefix": "cpcm",
    "body": [
      "! ${1|B3LYP,PBE0,wB97X-D3|} ${2|def2-SVP,def2-TZVP|} CPCM",
      "",
      "%cpcm",
      "  smd true",
      "  SMDsolvent \"${3|water,acetone,acetonitrile,chloroform,dmso,ethanol,methanol,toluene|}\"",
      "end",
      "",
      "* xyz ${4:0} ${5:1}",
      "${6:  C  0.0  0.0  0.0}",
      "* ",
      "$0"
    ],
    "description": "Solvation with CPCM/SMD model"
  },
  "PAL Block (Parallel)": {
    "prefix": "pal",
    "body": [
      "%pal",
      "  nprocs ${1:4}",
      "end"
    ],
    "description": "Parallel execution configuration"
  },
  "MaxCore Block": {
    "prefix": "maxcore",
    "body": [
      "%maxcore ${1:2000}"
    ],
    "description": "Memory per core in MB"
  },
  "SCF Block": {
    "prefix": "scf",
    "body": [
      "%scf",
      "  MaxIter ${1:500}",
      "  ${2|TolE,ConvForced,DiisMaxEq|} ${3:1e-8}",
      "end"
    ],
    "description": "SCF convergence parameters"
  },
  "Geometry Block": {
    "prefix": "geom",
    "body": [
      "%geom",
      "  MaxIter ${1:100}",
      "  ${2|TolE,TolRMSG,TolMaxG|} ${3:1e-6}",
      "  Calc_Hess ${4|true,false|}",
      "  Recalc_Hess ${5:10}",
      "end"
    ],
    "description": "Geometry optimization parameters"
  },
  "Coordinates XYZ": {
    "prefix": "xyz",
    "body": [
      "* xyz ${1:0} ${2:1}",
      "${3:  C  0.0  0.0  0.0}",
      "* "
    ],
    "description": "Cartesian coordinates block"
  },
  "Basis Set Block": {
    "prefix": "basis",
    "body": [
      "%basis",
      "  NewGTO ${1:C} \"${2:def2-TZVP}\" end",
      "  NewAuxGTO ${1:C} \"${3:def2/J}\" end",
      "end"
    ],
    "description": "Custom basis set assignment"
  },
  "NEB Calculation": {
    "prefix": "neb",
    "body": [
      "! ${1|B3LYP,PBE0|} ${2|def2-SVP,def2-TZVP|} NEB-TS",
      "",
      "%neb",
      "  NImages ${3:8}",
      "  Product \"${4:product.xyz}\"",
      "end",
      "",
      "* xyzfile ${5:0} ${6:1} ${7:reactant.xyz}",
      "$0"
    ],
    "description": "Nudged Elastic Band (NEB) calculation"
  },
  "D3 Dispersion": {
    "prefix": "d3",
    "body": [
      "! D3BJ"
    ],
    "description": "Grimme's D3 dispersion correction with BJ damping"
  },
  "RIJCOSX Approximation": {
    "prefix": "rijcosx",
    "body": [
      "! RIJCOSX def2/J"
    ],
    "description": "Resolution of Identity approximation for Coulomb and exchange"
  },
  "TDDFT Calculation": {
    "prefix": "tddft",
    "body": [
      "! ${1|B3LYP,CAM-B3LYP,PBE0|} ${2|def2-SVP,def2-TZVP|} ${3|TightSCF,VeryTightSCF|}",
      "",
      "%tddft",
      "  NRoots ${4:10}",
      "  MaxDim ${5:5}",
      "  TDA ${6|true,false|}",
      "end",
      "",
      "* xyz ${7:0} ${8:1}",
      "${9:  C  0.0  0.0  0.0}",
      "* ",
      "$0"
    ],
    "description": "Time-Dependent DFT (excited states)"
  },
  "CASSCF Calculation": {
    "prefix": "casscf",
    "body": [
      "! ${1|def2-SVP,def2-TZVP|} ${2|TightSCF,VeryTightSCF|}",
      "",
      "%casscf",
      "  nel ${3:10}",
      "  norb ${4:10}",
      "  mult ${5:1}",
      "  nroots ${6:1}",
      "end",
      "",
      "* xyz ${7:0} ${8:1}",
      "${9:  C  0.0  0.0  0.0}",
      "* ",
      "$0"
    ],
    "description": "Complete Active Space SCF calculation"
  }
}
